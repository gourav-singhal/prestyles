{
  "name": "prestyles",
  "version": "1.0.1",
  "description": "React Native StyleSheet alternative that supports platform switching and functional styles",
  "main": "./src/index.js",
  "author": "mistenkt",
  "homepage": "https://github.com/mistenkt/prestyle",
  "private": false,
  "license": "MIT",
  "scripts": {
    "pretty": "prettier --write \"src/**/*.js\" \"__tests__/**/*.js\" \"__mocks__/**/*.js\"",
    "test": "jest"
  },
  "devDependencies": {
    "@babel/plugin-transform-modules-commonjs": "^7.10.1",
    "@testing-library/react-hooks": "^3.4.1",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-serial-runner": "^1.1.0",
    "lint-staged": "^10.2.2",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-test-renderer": "^16.13.1"
  },
  "peerDependencies": {
    "react-native": "^0.62.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run pretty"
    ]
  }
}
